{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    // project options
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": false,
    "noEmitOnError": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "isolatedModules": true,
    "removeComments": false,
    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    // linter checks
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    // advanced
    "importsNotUsedAsValues": "remove",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "resolveJsonModule": true
  },
  "include": [
    "billing",
    "indexer",
    "upload-api",
    "stacks",
    "carpark",
    "replicator",
    "ucan-invocation",
    "filecoin",
    "tools",
    "lib",
    "psa"
  ],
  "exclude": ["billing/coverage", "upload-api/dist"]
}
